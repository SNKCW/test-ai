# Anwendung
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Compose-Profile (z. B. "dev" oder "dev,n8n" lokal, "prod" bzw. "prod,n8n" auf Servern)
COMPOSE_PROFILES=dev
SITE_DOMAIN=localhost
ACME_EMAIL=admin@example.com
N8N_DOMAIN=

# Postgres
POSTGRES_USER=postgres
POSTGRES_DB=app
POSTGRES_PASSWORD=change-me
# Wichtig: Hier KEINE ${...}-Interpolation verwenden. Passwort direkt einsetzen.
DATABASE_URL=postgresql://${POSTGRES_USER}:change-me@db:5432/${POSTGRES_DB}?schema=public

# Auth
ADMIN_TOKEN=please-change-me
# Für lokale Übungen kann AUTH_DISABLED=true gesetzt werden
AUTH_DISABLED=false

# n8n (Basic Auth aktiv, auch wenn nur lokal erreichbar)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me

# n8n E-Mail (lokal via Mailpit)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=mailpit
N8N_SMTP_PORT=1025
N8N_SMTP_SSL=false
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER="n8n <no-reply@localhost>"
N8N_PROTOCOL=http
# Lokal: Host erzeugt Links in E-Mails; für Server Domain eintragen
N8N_HOST=localhost:5678
# Optional: Setzen, wenn n8n hinter einem Proxy/Domain erreichbar ist
N8N_WEBHOOK_URL=

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change-me
